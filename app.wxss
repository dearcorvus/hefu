/**app.wxss**/
@import "/pages/components/tabbar/tabbar.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 用户弹窗样式 */

.justZhi {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 333;
}

.zhiSuccess {
  width: 70%;
  height: 320rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
  z-index: 555555555555555;
  padding-bottom: 20rpx;
}

.confirm {
  width: 50%;
  height: 65rpx;
  line-height: 65rpx;
  background: #75c4b5;
  color: #fff;
  text-align: center;
  font-size: 26rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
}
